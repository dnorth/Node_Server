<script>
  $("#button").click(function(e){
      var value = $("#cityField").val();
      e.preventDefault();
      $("#dispCity").text(value);
      
      var myurl = "https://api.wunderground.com/api/7e10222e2cc1584b/geolookup/conditions/q/Utah/";
      myurl += value; 
      myurl += ".json";
      
      $.ajax({
        url: myurl,
        dataType : "jsonp",
        success : function(parsed_json) {
            var weather_img = parsed_json['current_observation']['icon_url'];
            var location = parsed_json['location']['city'];
            var temp_string = parsed_json['current_observation']['temperature_string'];
            var current_weather = parsed_json['current_observation']['weather'];
            
            everything = "<img src=\"" + weather_img + "\"><br>"; 
            everything += "<ul>";
            everything += "<li>Location: "+ location;
            everything += "<li>Temperature: "+ temp_string;
            everything += "<li>Weather: "+ current_weather;
            everything += "</ul>";
            $("#weather").html(everything);
        }
      });
  });

  $("#cityField").keyup(function() {
      var jsonString = "narwhallife.com/getcity?q=";
      jsonString+= $("#cityField").val();
      var everything; 
      $.getJSON(jsonString, function(data) {
          if(data.length > 0) {
              everything = "<ul class='list-group'>";
              $.each(data, function(i, item) {
              everything += "<li class='list-group-item'> " + data[i].city + "</li>";
              });
          everything += "</ul>";
          } else {
              everything = "<ul class='list-group'><li class='list-group-item'>No Suggestions</li></ul>";
          }
      })
      .done(function() { $("#textHint").html(everything); })
      .fail(function(jqXHR, textStatus, errorThrown) {
            $("#textHint").html("<ul class='list-group'><li class='list-group-item'>No Suggestions</li></ul>");
        });
  });
</script>
